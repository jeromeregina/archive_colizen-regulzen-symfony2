{% extends "NovactiveAdminBundle::admin_layout.html.twig" %}
{% from "NovactiveAdminBundle:Form:_macros.html.twig" import btn %}

{% block body -%}
    <h1>Cycle</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Starts at / Ends at</th>
                <td>{{ entity.start|date('H') }}h/ {{ entity.end|date('H') }}h</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        {{ btn('cycle','list') }}
    </li>
    <li>
        {{ btn('cycle','edit',entity.id) }}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
