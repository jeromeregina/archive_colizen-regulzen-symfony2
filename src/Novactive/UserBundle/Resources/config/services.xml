<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="novactive_user.listener.login.class">Novactive\UserBundle\Listener\Login</parameter>
        <parameter key="security.user_checker.class">Novactive\UserBundle\Security\UserChecker</parameter>
    </parameters>

    <services>
        <service id="novactive_user.listener.login" class="%novactive_user.listener.login.class%">
            <tag name="kernel.event_listener" event="security.interactive_login" method="onSecurityInteractiveLogin" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="session" />
        </service>
        <service id="security.user_checker" class="%security.user_checker.class%" public="false">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%session_login_lock_time%</argument>
        </service>
    </services>
    
</container>
