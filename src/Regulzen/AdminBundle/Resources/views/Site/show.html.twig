{% extends "RegulzenAdminBundle::layout.html.twig" %}

{% from "RegulzenAdminBundle:Form:_macros.html.twig" import btn %}

{% block content %}
    <h1>Site</h1>

    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}

    <table class="record_properties table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Code Regulzen</th>
                <td>{{ entity.codeRegulzen }}</td>
            </tr>
            <tr>
                <th>Code Imtech</th>
                <td>{{ entity.codeImtech }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ entity.isActive }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ entity.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ entity.latitude }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        {{ btn('site','list') }}
    </li>
    <li>
        {{ btn('site','edit',entity.id) }}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
