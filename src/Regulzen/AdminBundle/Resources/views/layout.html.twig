{% extends "::base.html.twig" %}

{% set menu = knp_menu_render("RegulzenAdminBundle:Builder:adminMenu", { 'style': 'navbar' }) %}


{% block header %}
    {% include 'RegulzenAdminBundle::_header.html.twig' %}
{% endblock %}


{% block stylesheets %}
    {% stylesheets '@RegulzenRegulationBundle/Resources/public/ace/css/bootstrap-timepicker.css'
        filter='cssrewrite'
        output='/css/regulzen_admin.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="all" />
    {% endstylesheets %}
    {% stylesheets '@RegulzenAdminBundle/Resources/assets/css/*.less'
        filter='less'
        output='/css/widgets.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="all" />
    {% endstylesheets %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts '@RegulzenAdminBundle/Resources/assets/js/*'
                   '@RegulzenRegulationBundle/Resources/public/ace/js/date-time/bootstrap-timepicker.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
