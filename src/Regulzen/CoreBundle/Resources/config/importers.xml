<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="regulzen_core.importer.tour_planning.class">Regulzen\CoreBundle\Importer\TourPlanning</parameter>
        <parameter key="regulzen_core.importer.tour_planning.filepattern">/\.xls(x){0,1}$/</parameter>
        <parameter key="regulzen_core.importer.tour_planning.mail_template">RegulzenCoreBundle:Mails:import.html.twig</parameter>
        <parameter key="regulzen_core.importer.parcel_details.class">Regulzen\CoreBundle\Importer\ParcelDetails</parameter>
        <parameter key="regulzen_core.importer.parcel_details.filepattern">*.txt</parameter>
        <parameter key="regulzen_core.importer.parcel_details.mail_template">RegulzenCoreBundle:Mails:import.html.twig</parameter>
        <parameter key="regulzen_core.importer.output_handler.class">Regulzen\CoreBundle\Command\OutputHandler\OutputHandler</parameter>
        <parameter key="regulzen_core.importer.webservice.output_handler.class">Regulzen\CoreBundle\Command\OutputHandler\WebServiceOutputHandler</parameter>
        <parameter key="regulzen_core.importer.webservice.class">Regulzen\CoreBundle\Importer\WebService</parameter>
        <parameter key="regulzen_core.importer.webservice.mail_template">RegulzenCoreBundle:Mails:import.html.twig</parameter>
    </parameters>

    <services>
        <service id="regulzen_core.importer.tour_planning" class="%regulzen_core.importer.tour_planning.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%file_import.after_routeur.location%</argument>
            <argument>%regulzen_core.importer.tour_planning.filepattern%</argument>
            <argument type="service" id="swiftmailer.mailer.default" />
            <argument type="service" id="templating" />
            <argument>%regulzen_core.importer.tour_planning.mail_template%</argument>
            <argument type="service" id="phpexcel" />
        </service>
        <service id="regulzen_core.importer.parcel_details" class="%regulzen_core.importer.parcel_details.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%file_import.parcels_planned.location%</argument>
            <argument>%regulzen_core.importer.parcel_details.filepattern%</argument>
            <argument type="service" id="swiftmailer.mailer.default" />
            <argument type="service" id="templating" />
            <argument>%regulzen_core.importer.parcel_details.mail_template%</argument>
        </service>
        <service id="regulzen_core.importer.webservice" class="%regulzen_core.importer.webservice.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="regulzen_core.soapclient.czn_webservice" />
            <argument type="service" id="swiftmailer.mailer.default" />
            <argument type="service" id="templating" />
            <argument>%regulzen_core.importer.webservice.mail_template%</argument>
        </service>
        <service id="regulzen_core.importer.output_handler" class="%regulzen_core.importer.output_handler.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>
        <service id="regulzen_core.importer.webservice.output_handler" class="%regulzen_core.importer.webservice.output_handler.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>
    </services>
</container>
