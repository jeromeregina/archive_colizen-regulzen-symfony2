{% extends "::base.html.twig" %}

{% block title %}- Connexion{% endblock %}

{% block stylesheets %}
<style>
    body{
        background-color: white;
    }
</style>
{% endblock %}


{% block body %}
<body>
    <div class="login-container">
    <div class="center">
        <img src="{{ asset('bundles/colizeninterface/images/logo_colizen.png') }}" />
    </div>
    {% if error %}
        <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
    
    <div class="space-6"></div><!-- optional space -->
    <div class="pos-rel"><!-- a position relative container -->
        <div class="login-box visible widget-box no-border" id="login-box">
            <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"/>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="_password" class="form-control" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"/>
                </div>

                {#    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />#}
                {#    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>#}

                <input type="submit" id="_submit" class="btn btn-default pull-right" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            </form>

        </div>

    </div>


</div>
</body>
{% endblock %}
