{% extends "ColizenAdminBundle::layout.html.twig" %}

{% from "ColizenAdminBundle:Form:_macros.html.twig" import btn %}

{% block content %}
    <h1>ShipperAccount list</h1>

    <table class="records_list table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Shortname</th>
                <th>Code</th>
                <th>Status</th>
                <th>Sensitivity</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_shipper_account_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortName }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.sensitivity }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                      {{ btn('shipper_account','show',entity.id,true) }}
                    </li>
                      {{ btn('shipper_account','edit',entity.id,true) }}
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
           {{ btn('shipper_account','new') }}
        </li>
    </ul>
    {% endblock %}
