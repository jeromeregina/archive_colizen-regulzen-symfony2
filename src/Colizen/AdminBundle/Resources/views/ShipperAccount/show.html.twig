{% extends "ColizenAdminBundle::layout.html.twig" %}

{% from "ColizenAdminBundle:Form:_macros.html.twig" import btn %}

{% block content %}
    <h1>ShipperAccount</h1>

    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}

    <table class="record_properties table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Sensitivity</th>
                <td>{{ entity.sensitivity }}</td>
            </tr>
            <tr>
                <th>Flow Type</th>
                <td>{{ entity.flowTypeLabel|trans }}</td>
            </tr>
            <tr>
                <th>Service Label</th>
                <td>{{ entity.ServiceLevelLabel|trans }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        {{ btn('shipper_account','list') }}
    </li>
    <li>
        {{ btn('shipper_account','edit',entity.id) }}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
