<div id="navbar" class="navbar navbar-default">
    <div id="navbar-container" class="navbar-container">

        <!-- toggle buttons are here or inside brand container -->

        <div class="navbar-header pull-left">
            <a href="{{ path('regulzen_interface_index') }}" title="Regulzen">
                <img src="{{ asset('bundles/colizeninterface/images/logo_colizen_45.png') }}" />
            </a>
        </div>
        <!-- /.navbar-header -->


        <div class="navbar-buttons navbar-header pull-right">
            <ul class="nav ace-nav">
                <!-- user buttons such as messages, notifications and user menu -->
                {{ menu is defined ? menu|raw }}

                <ul class="nav navbar-right">
                    <li>
                        {% if latest_import_action_date %}
                            {{ 'regulzen.info.import_last_started_at'|trans({'%date%':latest_import_action_date|date('d/m/Y'),'%time%':latest_import_action_date|date('H:i:s')}) }}
                        {% else %}
                            {{ 'regulzen.info.no_existing_import_logs'|trans }}
                        {% endif %}
                    </li>
                    <li>
                        {% if latest_content_update_date %}
                            {{ 'regulzen.info.content_last_updated_at'|trans({'%date%':latest_content_update_date|date('d/m/Y'),'%time%':latest_content_update_date|date('H:i:s')}) }}
                        {% else %}
                            {{ 'regulzen.info.no_content_updated'|trans }}
                        {% endif %}
                    </li>
                </ul>


                <li class="light-green">
                    <a href="{{ path('regulzen_interface_index') }}">Tableau National</a>
                </li>
                <li class="light-blue">
                    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                        {% if app.user %}
                            <span class="user-info"><small>Bienvenue,</small> {{ app.user }}</span>
                        {% endif %}
                        <i class="ace-icon fa fa-caret-down"></i>
                    </a>
                    <ul class="user-menu dropdown-menu dropdown-menu-right dropdown-yellow dropdown-caret dropdown-close">
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- /.navbar-buttons -->


        <nav class="navbar-menu pull-left">
            <!-- optional menu & form inside navbar -->
        </nav>
        <!-- /.navbar-menu -->

    </div>
    <!-- /.navbar-container -->
</div><!-- /.navbar -->