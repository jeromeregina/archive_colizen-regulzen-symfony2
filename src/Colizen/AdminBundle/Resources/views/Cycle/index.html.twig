{% extends "ColizenAdminBundle::layout.html.twig" %}

{% from "ColizenAdminBundle:Form:_macros.html.twig" import btn %}

{% block content %}
    <h1>Cycle list</h1>

    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}

    <table class="records_list table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Time</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_cycle_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.start|date('H\\hi') }}/{{ entity.end|date('H\\hi') }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    {{ btn('cycle','show',entity.id,true) }}
                    {{ btn('cycle','edit',entity.id,true) }}
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            {{ btn('cycle','new') }}
        </li>
    </ul>
{% endblock %}
