{% extends "ColizenAdminBundle::layout.html.twig" %}
{% from "ColizenAdminBundle:Form:_macros.html.twig" import btn,bool %}

{% block content -%}
    <h1>TourCode</h1>
    
    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}

    <table class="record_properties table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Is excluded?</th>
                <td>{{ bool(entity.isExcluded) }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        {{ btn('tour_code','list') }}
    </li>
    <li>
        {{ btn('tour_code','edit',entity.id) }}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
