{% extends "ColizenAdminBundle::layout.html.twig" %}

{% from "ColizenAdminBundle:Form:_macros.html.twig" import btn %}

{% block content %}
    <h1>Status</h1>

    <table class="record_properties table-hover table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Short name</th>
                <td>{{ entity.shortname }}</td>
            </tr>
            <tr>
                <th>Is Excluded?</th>
                <td>{{ (entity.isExcluded? 'yes':'no')|trans }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        {{ btn('status','list') }}
    </li>
    <li>
        {{ btn('status','edit',entity.id) }}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
